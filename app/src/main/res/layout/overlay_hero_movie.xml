<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|start"
    android:background="@android:color/transparent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="20dp">

    <!-- Movie Title -->
    <TextView
        android:id="@+id/hero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Movie Title" />

    <!-- Movie Info Row (TMDB Rating, RT Rating, Release Date, Runtime, Certification) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:gravity="center_vertical">

        <!-- TMDB Rating with Star -->
        <TextView
            android:id="@+id/hero_tmdb_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="â­"
            android:layout_marginEnd="2dp"
            tools:text="â­" />

        <TextView
            android:id="@+id/hero_tmdb_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            tools:text="8.1" />

        <!-- Rotten Tomatoes Rating -->
        <TextView
            android:id="@+id/hero_rt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="ðŸ…"
            android:layout_marginEnd="2dp"
            android:visibility="gone"
            tools:text="ðŸ…" />

        <TextView
            android:id="@+id/hero_rt_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            tools:text="94%" />

        <!-- Release Date -->
        <TextView
            android:id="@+id/hero_release_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            tools:text="Jun 3, 1998" />

        <!-- Runtime -->
        <TextView
            android:id="@+id/hero_runtime_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:text="â°"
            android:layout_marginEnd="2dp"
            tools:text="â°" />

        <TextView
            android:id="@+id/hero_runtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            tools:text="1:42:56" />

        <!-- Certification (PG, R, etc.) -->
        <TextView
            android:id="@+id/hero_certification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="@drawable/certification_background"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:text="PG" />

    </LinearLayout>
    <!-- Genres -->
    <TextView
        android:id="@+id/hero_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:alpha="0.9"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Action &amp; Adventure / Drama / Sci-Fi &amp; Fantasy" />

    <!-- Movie Overview -->
    <TextView
        android:id="@+id/hero_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.1"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:maxLines="5"
        android:ellipsize="end"
        tools:text="This is the movie overview text that provides a brief description of the movie plot and main characters." />

</LinearLayout>