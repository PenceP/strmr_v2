<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/black">

    <!-- Backdrop Image -->
    <org.jellyfin.androidtv.ui.AsyncImageView
        android:id="@+id/hero_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:contentDescription="Movie backdrop"
        tools:src="@drawable/tile_land_tv" />

    <!-- Gradient Overlay -->
    <View
        android:id="@+id/hero_gradient_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="48dp">

        <!-- Spacer to push content to the right side -->
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.05" />

        <!-- Movie Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Movie Title -->
            <TextView
                android:id="@+id/hero_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp"
                tools:text="The Last of Us" />

            <!-- Rating and Year -->
            <TextView
                android:id="@+id/hero_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:alpha="0.9"
                android:layout_marginBottom="8dp"
                tools:text="2023 • ★ 8.6" />

            <!-- Genres -->
            <TextView
                android:id="@+id/hero_genres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.8"
                android:layout_marginBottom="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Action / Comedy / Drama" />

            <!-- Individual Rating (hidden, kept for compatibility) -->
            <TextView
                android:id="@+id/hero_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="★ 8.6" />

            <!-- Individual Year (hidden, kept for compatibility) -->
            <TextView
                android:id="@+id/hero_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:visibility="gone"
                tools:text="2023" />

            <!-- Movie Overview -->
            <TextView
                android:id="@+id/hero_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:alpha="0.85"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="4"
                android:ellipsize="end"
                tools:text="Twenty years after modern civilization has been destroyed, Joel, a hardened survivor, is hired to smuggle Ellie, a 14-year-old girl, out of an oppressive quarantine zone. What starts as a small job soon becomes a brutal, heartbreaking journey, as they both must traverse the United States and depend on each other for survival." />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
