<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|start"
    android:background="@android:color/transparent"
    android:paddingStart="0dp"
    android:paddingEnd="0dp"
    android:paddingTop="20dp">

    <!-- Show Title -->
    <TextView
        android:id="@+id/hero_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="28sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="6"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Show Title" />

    <!-- Rating and Details Row -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <!-- TMDB Score -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginEnd="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:text="⭐"
                android:layout_marginEnd="2dp"
                tools:text="⭐" />

            <TextView
                android:id="@+id/hero_tmdb_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:shadowColor="@android:color/black"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:layout_marginEnd="12dp"
                tools:text="8.5" />

        </LinearLayout>

        <!-- First Air Date -->
        <TextView
            android:id="@+id/hero_first_air_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            tools:text="Sep 15, 2008" />

        <!-- Seasons -->
        <TextView
            android:id="@+id/hero_seasons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginEnd="12dp"
            tools:text="5 seasons" />

        <!-- Content Rating -->
        <TextView
            android:id="@+id/hero_content_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:shadowColor="@android:color/black"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:background="@drawable/certification_background"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            tools:text="TV-MA" />

    </LinearLayout>

    <!-- Genres -->
    <TextView
        android:id="@+id/hero_genres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:alpha="0.9"
        android:layout_marginBottom="4dp"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Action &amp; Adventure / Drama / Sci-Fi &amp; Fantasy" />

    <!-- Show Overview -->
    <TextView
        android:id="@+id/hero_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:lineSpacingMultiplier="1.1"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:maxLines="5"
        android:ellipsize="end"
        tools:text="This is the show overview text that provides a brief description of the show plot and main characters." />

</LinearLayout>